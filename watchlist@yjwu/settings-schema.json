{
    "sec-settings": {
        "type": "header",
        "description": "Usage settings"
    },
    "source": {
        "type": "radiogroup",
        "default": "yahoo",
        "description": "Retrieve data from",
        "options": {
            "Yahoo! Finance": "yahoo",
            "Google Finance": "google"
        }
    },
    "period-refresh": {
        "type": "spinbutton",
        "default": 15,
        "min": 1,
        "max": 120,
        "units": "minutes",
        "step": 1,
        "description": "Refresh data every"
    },
    "period-rotate": {
        "type": "spinbutton",
        "default": 3,
        "min": 0,
        "max": 60,
        "units": "seconds (set 0 to display the value of your portfolio)",
        "step": 1,
        "description": "Switch symbols/indexes in the panel every"
    },
    "portfolio": {
        "type": "entry",
        "default": "VTI,20;VEU,10;MUB,15;JNK;GLD",
        "description": "Watchlist/Portfolio",
        "tooltip": "Format: symbol1,#shares1;symbol2,#shares2;symbol3;symbol4;..."
    },
    "change-unit": {
        "type": "radiogroup",
        "default": "percent",
        "description": "Display daily change in the panel in",
        "options": {
            "Percentage (%)": "percentage",
            "Dollars ($)": "dollars",
            "None": "none"
        }
    },
    "display-allocations": {
        "type": "checkbox",
        "default": true,
        "description": "Show allocations"
    },
    "verbose": {
        "type": "checkbox",
        "default": false,
        "description": "Display a warning message as data retrieval failed"
    },
    "separator": {
        "type": "separator"
    },
    "sec-indexes": {
        "type": "header",
        "description": "Display indexes"
    },
    "show-S&P500": {
        "type": "checkbox",
        "default": true,
        "description": "S&P 500 Index"
    },
    "show-DJI": {
        "type": "checkbox",
        "default": true,
        "description": "Dow Jones Industrial Average"
    },
    "show-Nasdaq": {
        "type": "checkbox",
        "default": true,
        "description": "Nasdaq Composite"
    },
    "show-VIX": {
        "type": "checkbox",
        "default": true,
        "description": "CBOE Volatility Index"
    },
    "show-TN10Y": {
        "type": "checkbox",
        "default": true,
        "description": "CBOE Interest Rate 10 Year T-Note"
    }
}